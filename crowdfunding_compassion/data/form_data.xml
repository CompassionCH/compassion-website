<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="model_cms_form_crowdfunding_project_step1" model="ir.model">
      <field name="website_form_key">crowdfunding_project_step1</field>
      <field name="website_form_access">True</field>
      <field name="website_form_label">Crowdfunding - Create a project</field>
    </record>
    <function model="ir.model.fields" name="formbuilder_whitelist">
      <value>cms.form.crowdfunding.project.step1</value>
      <value
      eval="[
        'name',
        'description',
        'deadline',
        'cover_photo',
        'presentation_video',
        'type',
        'facebook_url',
        'twitter_url',
        'instagram_url',
        'personal_web_page_url',
        ]"
    />
    </function>
    <record id="model_cms_form_crowdfunding_project_step2" model="ir.model">
      <field name="website_form_key">crowdfunding_project_step2</field>
