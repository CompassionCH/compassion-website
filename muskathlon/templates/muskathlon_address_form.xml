<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="address_muskathlon" inherit_id="website_sale.address_b2b">
        <xpath expr="//input[@name='vat']/.." position="attributes">
            <attribute name="t-attf-class" add="hidden" separator=" " />
        </xpath>
        <xpath expr="//input[@name='company_name']/.." position="attributes">
            <attribute name="t-attf-class" remove="col-lg-6" separator=" " />
            <attribute name="t-attf-class" add="col-lg-12" separator=" " />
        </xpath>
        <xpath
      expr="//div[contains(@class, 'oe_cart')]//h2/a/.."
      position="attributes"
    >
            <attribute
        name="class"
        add="d-flex d-flex align-items-center flex-wrap"
        separator=" "
      />
            <attribute name="style" add="column-gap: 0.5rem;" separator=";" />
        </xpath>
        <xpath
      expr="//div[contains(@class, 'oe_cart')]//h2/a"
      position="attributes"
    >
            <attribute name="style" add="margin-top: 0;" separator=";" />
        </xpath>
    </template>
</odoo>
